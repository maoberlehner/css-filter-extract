{
  "name": "css-filter-extract",
  "description": "Run certain filters on (S)CSS code",
  "keywords": [
    "CSS"
  ],
  "version": "0.0.1",
  "author": "Markus Oberlehner",
  "homepage": "https://github.com/maoberlehner/css-filter-extract",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maoberlehner/css-filter-extract"
  },
  "bugs": {
    "url": "https://github.com/maoberlehner/css-filter-extract/issues"
  },
  "dependencies": {
    "postcss": "^5.2.8"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "esdoc": "^0.5.2",
    "eslint": "^3.12.2",
    "eslint-config-modularis": "^4.0.0",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^3.2.0",
    "postcss-less": "^0.15.0",
    "postcss-scss": "^0.4.0",
    "pre-git": "^3.12.0",
    "rollup": "^0.40.0",
    "rollup-plugin-buble": "^0.15.0"
  },
  "main": "dist/index.js",
  "jsnext:main": "js/index.js",
  "scripts": {
    "scripts:bundle": "rollup --config --format cjs --output dist/index.js js/index.js & rollup --config --format cjs --output dist/lib/postcss-filter-extract.js js/lib/postcss-filter-extract.js",
    "scripts:lint": "eslint js/* test/*",
    "scripts:lint-no-error": "eslint js/* test/* || exit 0",
    "scripts:doc": "esdoc -c .esdocrc",
    "scripts": "npm run scripts:bundle && npm run scripts:lint-no-error",
    "test": "mocha"
  },
  "config": {
    "pre-git": {
      "pre-commit": [
        "npm run scripts:lint"
      ],
      "pre-push": [
        "npm test"
      ]
    }
  }
}
